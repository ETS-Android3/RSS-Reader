<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/background</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@color/onSecondary</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        # Required for
        # animated icons
        <!--        <item name="android:windowSplashScreenIconBackgroundColor">?colorOnSecondary</item>-->
        <item name="android:windowSplashScreenBrandingImage">@mipmap/ic_launcher</item>
        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.RRSReader</item>
        # Required.
    </style>
</resources>