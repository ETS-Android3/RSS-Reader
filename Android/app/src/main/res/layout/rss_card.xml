<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/rss_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:backgroundTint="@color/background"
        android:clickable="true"
        android:elevation="5dp"
        android:outlineAmbientShadowColor="@color/onSecondary"
        android:outlineSpotShadowColor="@color/onSecondary"
        app:cardCornerRadius="16dp"
        app:cardPreventCornerOverlap="true"
        tools:targetApi="p">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/rss_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/Rounded_start"
                app:srcCompat="@mipmap/ic_launcher" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_end_shape"
                    android:backgroundTint="@color/secondary"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/title_rss_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8.5"
                        android:ellipsize="end"
                        android:lines="1"
                        android:paddingStart="4dp"
                        android:paddingEnd="0dp"
                        android:text="Title"
                        android:textColor="@color/onSecondary"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/time_rss_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:width="0dp"
                        android:ellipsize="start"
                        android:lines="1"
                        android:paddingStart="0dp"
                        android:paddingEnd="8dp"
                        android:text="Time"
                        android:textColor="@color/onSecondary"
                        android:textDirection="rtl"
                        android:textStyle="italic"
                        app:layout_gravity="end"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/description_rss_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ellipsize="end"
                        android:lines="5"
                        android:text="Description"
                        android:textColor="@color/onSecondary"
                        tools:ignore="HardcodedText" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/bookmark_rss_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/background"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:minWidth="36dp"
                            android:minHeight="36dp"
                            android:padding="0dp"
                            app:icon="@drawable/ic_baseline_cloud_download_24"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconSize="24dp"
                            app:shapeAppearanceOverlay="@style/Circle" />

                    </FrameLayout>
                </FrameLayout>


            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</FrameLayout>