    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowActionBar">false</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        # Required for
        # animated icons
        <!--        <item name="android:windowSplashScreenIconBackgroundColor">?colorOnSecondary</item>-->
        <!--        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">-->
        <!--            @mipmap/ic_launcher-->
        <!--        </item>-->
        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.RRSReader</item>
        # Required.
    </style>

    <style name="Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Rounded_start">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

