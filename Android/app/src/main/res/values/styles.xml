<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <!--        &lt;!&ndash; Fill the screen &ndash;&gt;-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <!--        &lt;!&ndash; No backgrounds, titles or window float &ndash;&gt;-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>

        <!--        <item name="android:windowIsFloating">false</item>>-->
    </style>

    <style name="DialogFactory" parent="android:Theme.Dialog">
        <!--        &lt;!&ndash; Fill the screen &ndash;&gt;-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:colorAccent">@color/onSecondary</item>

        <!--        &lt;!&ndash; No backgrounds, titles or window float &ndash;&gt;-->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/onSecondary</item>

        <!--        <item name="android:windowIsFloating">false</item>>-->
    </style>

    <style name="FullDialog" parent="android:Theme.Dialog">
        <!--        &lt;!&ndash; Fill the screen &ndash;&gt;-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <!--        &lt;!&ndash; No backgrounds, titles or window float &ndash;&gt;-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>
        <item name="android:windowIsFloating">false</item>>
    </style>


